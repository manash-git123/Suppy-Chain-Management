<html>
    <head>
        <title>Transaction</title>
        <style>
                *, *:before, *:after {
                -moz-box-sizing: border-box;
                -webkit-box-sizing: border-box;
                box-sizing: border-box;
                }

                body {
                font-family: 'Nunito', sans-serif;
                color: #d8e3e7;
                background-color: #393e46;
                }

                form {
                margin: 10px auto;
                padding: 10px 20px;
                background: #1b1a17;
                border-radius: 8px;
                }

                h1 {
                margin: 0 0 30px 0;
                text-align: center;
                }

                input[type="text"],
                input[type="password"],
                input[type="date"],
                input[type="datetime"],
                input[type="email"],
                input[type="number"],
                input[type="search"],
                input[type="tel"],
                input[type="time"],
                input[type="url"],
                textarea,
                select {
                background: rgba(255,255,255,0.1);
                border: none;
                font-size: 16px;
                height: auto;
                margin: 0;
                outline: 0;
                padding: 15px;
                width: 100%;
                background-color: #e8eeef;
                color: #8a97a0;
                box-shadow: 0 1px 0 rgba(0,0,0,0.03) inset;
                margin-bottom: 30px;
                }

                input[type="radio"],
                input[type="checkbox"] {
                margin: 0 4px 8px 0;
                }

                select {
                padding: 6px;
                height: 32px;
                border-radius: 2px;
                }

                button {
                padding: 19px 39px 18px 39px;
                color: #1b1a17;
                background-color: #d8e3e7;
                font-size: 18px;
                text-align: center;
                font-style: normal;
                border-radius: 5px;
                width: 100%;
                border: 1px solid #d8e3e7;
                border-width: 1px 1px 3px;
                box-shadow: 0 -1px 0 rgba(255,255,255,0.1) inset;
                margin-bottom: 10px;
                }

                fieldset {
                margin-bottom: 30px;
                border: none;
                }

                legend {
                font-size: 1.4em;
                margin-bottom: 10px;
                }

                label {
                display: block;
                margin-bottom: 8px;
                }

                label.light {
                font-weight: 300;
                display: inline;
                }

                .number {
                background-color: #d8e3e7;
                color: #1b1a17;
                height: 30px;
                width: 30px;
                display: inline-block;
                font-size: 0.8em;
                margin-right: 4px;
                line-height: 30px;
                text-align: center;
                text-shadow: 0 1px 0 rgba(255,255,255,0.2);
                border-radius: 100%;
                }

                @media screen and (min-width: 480px) {

                form {
                    max-width: 480px;
                }

                }

        </style>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Sign Up Form</title>
        <link rel="stylesheet" href="https://codepen.io/gymratpacks/pen/VKzBEp#0">
        <link href='https://fonts.googleapis.com/css?family=Nunito:400,300' rel='stylesheet' type='text/css'>
    </head>
    <body>
       
      <div class="row">
    <div class="col-md-12">
      <form action="/transactions/broadcast" method="POST">
        <h1> Transaction </h1>
        
        <fieldset>
          
          <legend><span class="number">1</span> Transaction Info</legend>
        
          <label for="name">Sender</label>
          <input type="text" id="name" name="sender">
        
          <label for="email">Recipient</label>
          <input type="text" id="mail" name="recipient">
       
          <label for="password">Product ID</label>
          <input type="text" id="password" name="productID">
        
          <label for="name">Product Type</label>
          <input type="text" id="name" name="productType">
        
          <label for="email">Quantity</label>
          <input type="text" id="mail" name="quantity">
       
          <label for="password">Payment Mode</label>
          <input type="text" id="password" name="paymentMode">

          <label for="name">Payment ID</label>
          <input type="text" id="name" name="paymentID">
        
          <label for="email">Delivery Type</label>
          <input type="text" id="mail" name="deliveryType">
       
          <label for="password">Order Date</label>
          <input type="text" id="password" name="orderDate">

        </fieldset>
       
        <button type="submit">Submit</button>
        
       </form>
        </div>
      </div>
      
    </body>

</html>

